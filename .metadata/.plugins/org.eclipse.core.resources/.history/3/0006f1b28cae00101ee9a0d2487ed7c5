package com.example.springboot.webflux.app.models.services;

import com.example.springboot.webflux.app.models.documents.Categoria;

import reactor.core.publisher.Flux;
import reactor.core.publisher.Mono;

public interface CategoriaService {
	public Flux<Categoria> findAll();
	
	public Flux<Categoria> findAllConNombreUpperCase();
	
	public Flux<Categoria> findAllConNombreUpperCaseRepeat();

	
	public Mono<Categoria> findById(String id);
	
	public Mono<Categoria> save(Categoria Categoria);

	public Mono<Void> delete(Categoria Categoria);
}
